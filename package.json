{
  "name": "deckster",
  "productName": "Deckster",
  "description": "A deck building game",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@atlaskit/css-reset": "^6.6.2",
    "@electron/remote": "^2.1.0",
    "assert": "^2.1.0",
    "bootstrap": "^5.3.2",
    "mana-font": "^1.15.9",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0",
    "react-scripts": "^5.0.1",
    "styled-components": "^6.1.6",
    "web-vitals": "^2.1.4"
  },
  "license": "MIT",
  "main": "./src/index.js",
  "type": "commonjs",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "electron:serve": "concurrently -k \"cross-env NODE_OPTIONS=--openssl-legacy-provider BROWSER=none PORT=3010 yarn start\" \"yarn electron:start\"",
    "electron:build": "electron-builder build -w",
    "electron:start": "wait-on tcp:3010 && electron .",
    "electron:pack": "electron-builder build --em.main=build/electron.js"
  },
  "build": {
    "files": [
      "./build/**/*",
      "./public/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "./build/electron.js"
    },
    "appId": "vtt.deckster.app",
    "mac": {
      "category": "public.app-category.games"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^27.1.2",
    "@babel/core": "^7.23.5",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.9.1",
    "prettier": "^3.1.0",
    "wait-on": "^7.2.0"
  }
}
