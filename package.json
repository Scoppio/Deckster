{
  "name": "deckster",
  "productName": "Deckster",
  "author": "Luana Coppi Coppio",
  "description": "A VTT built for blind and hard of sight players, can be played with keyboard and screenreader",
  "version": "0.45.0",
  "private": true,
  "main": "public/electron.js",
  "favicon": "public/favicon2.ico",
  "repository": {
    "type": "git",
    "url": "https://github.com/Scoppio/Deckster.git"
  },
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "@sentry/react": "^8.15.0",
    "@tanstack/react-query": "^5.50.1",
    "antd": "^5.15.1",
    "assert": "^2.1.0",
    "bootstrap": "^5.3.2",
    "classnames": "^2.5.1",
    "mana-font": "^1.15.9",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-arrows": "^1.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-bootstrap": "^2.9.1",
    "react-dom": "^18.2.0",
    "react-remove-scroll-bar": "^2.3.4",
    "react-scripts": "^5.0.1",
    "styled-components": "^6.1.6",
    "update-electron-app": "^3.0.0",
    "web-vitals": "^2.1.4",
    "websocket": "^1.0.34"
  },
  "license": "MIT",
  "homepage": "./",
  "resolve": {
    "fallback": {
      "path": false
    }
  },
  "build": {
    "appId": "com.deckster.app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/**/*",
      "src/**/*",
      "package.json"
    ],
    "extends": null,
    "asar": true
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prebuild": "npm version minor",
    "electron:servelocal": "concurrently -k \"nodemon src/local/server.js\" \"cross-env NODE_OPTIONS=--openssl-legacy-provider BROWSER=none PORT=3010 yarn start\" \"yarn electron:start\"",
    "electron:serve": "concurrently -k \"cross-env NODE_OPTIONS=--openssl-legacy-provider BROWSER=none PORT=3010 yarn start\" \"yarn electron:start\"",
    "electron:build": "electron-builder build -w",
    "electron:start": "wait-on tcp:3010 && electron ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.1.0",
    "wait-on": "^7.2.0"
  }
}
